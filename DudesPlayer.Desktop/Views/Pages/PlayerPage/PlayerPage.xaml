<UserControl
    x:Class="DudesPlayer.Desktop.Views.Pages.PlayerPage.PlayerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DudesPlayer.Desktop.Views.Pages.PlayerPage"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" xmlns:playlisttab="clr-namespace:DudesPlayer.Desktop.Views.Pages.PlayerPage.PlaylistTab"
    d:DesignHeight="450" 
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <local:PlayerHeaderControls Grid.Row="0" />
        <local:PlayerVideoTitle VerticalAlignment="Top" Grid.Row="1" />
        <local:PlayerControls  Grid.Row="1"/>
        <playlisttab:PlaylistTab Grid.Row="1" />
    </Grid>
</UserControl>
