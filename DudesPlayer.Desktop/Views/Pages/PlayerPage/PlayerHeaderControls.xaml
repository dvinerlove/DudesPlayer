<UserControl
    x:Class="DudesPlayer.Desktop.Views.Pages.PlayerPage.PlayerHeaderControls"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DudesPlayer.Desktop.Views.Pages.PlayerPage"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="{StaticResource HeaderBrushPrimary}">
        <StackPanel Margin="8,8" Orientation="Horizontal">
            <ui:Button
                Margin="0,0,8,0"
                Appearance="Transparent"
                Content="Playlist"
                Icon="List24" />
            <ui:Button
                Margin="0,0,8,0"
                Appearance="Transparent"
                BorderBrush="Transparent"
                Content="Chat"
                Icon="Chat24" />
        </StackPanel>
    </Grid>
</UserControl>
